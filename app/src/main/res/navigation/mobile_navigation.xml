<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_link_library">

    <fragment
        android:id="@+id/nav_link_library"
        android:name="com.example.myapplication54.ui.linklibrary.LinkLibraryFragment"
        android:label="@string/menu_link_library"
        tools:layout="@layout/fragment_link_library" />

    <fragment
        android:id="@+id/readingSpaceFragment"
        android:name="com.example.myapplication54.ui.readingspace.ReadingSpaceFragment"
        android:label="Reading Space"
        tools:layout="@layout/fragment_reading_space" >
        <argument
            android:name="linkItemIndex"
            app:argType="integer" />
    </fragment>

    <action
        android:id="@+id/action_nav_link_library_to_readingSpaceFragment"
        app:destination="@id/readingSpaceFragment" />
</navigation>
